@startuml Robot_System_Call_Analysis_Platform_Use_Case_Diagram

title UMD Husky Robot System Call Analysis Platform - Use Case Diagram

left to right direction
skinparam packageStyle rectangle

actor "System Administrator" as admin
actor "Data Analyst" as analyst
actor "Research Scientist" as scientist
actor "System Engineer" as engineer
actor "Security Analyst" as security
actor "Robot System" as robot

rectangle "Robot System Call Analysis Platform" {
    
    ' Real-time Monitoring Use Cases
    package "Real-time Monitoring" {
        usecase "Monitor Real-time\nSystem Calls" as UC1
        usecase "View Live\nDashboard" as UC2
        usecase "Receive\nAlerts" as UC3
        usecase "Track Robot\nComponents" as UC4
    }
    
    ' Data Analysis Use Cases
    package "Data Analysis" {
        usecase "Analyze Historical\nData" as UC5
        usecase "Generate\nStatistics" as UC6
        usecase "Identify\nPatterns" as UC7
        usecase "Compare\nOperational Modes" as UC8
        usecase "Analyze Component\nBehavior" as UC9
    }
    
    ' Anomaly Detection Use Cases
    package "Anomaly Detection" {
        usecase "Detect\nAnomalies" as UC10
        usecase "Identify Cyber\nThreats" as UC11
        usecase "Validate\nBehavior Patterns" as UC12
        usecase "Configure\nThresholds" as UC13
    }
    
    ' Security & Data Validation Use Cases
    package "Security & Data Validation" {
        usecase "Validate Sensor\nData Integrity" as UC30
        usecase "Detect Data\nTampering" as UC31
        usecase "Emergency Stop\nRobot" as UC32
        usecase "Monitor Sensor\nStatus" as UC33
        usecase "Generate Security\nReport" as UC34
        usecase "Manual Override\nSafety" as UC35
        usecase "Configure Security\nThresholds" as UC36
    }
    
    ' Performance Optimization Use Cases
    package "Performance Optimization" {
        usecase "Analyze\nPerformance Metrics" as UC14
        usecase "Identify\nBottlenecks" as UC15
        usecase "Generate\nRecommendations" as UC16
        usecase "Compare\nBaselines" as UC17
    }
    
    ' Reporting Use Cases
    package "Reporting & Export" {
        usecase "Generate\nReports" as UC18
        usecase "Export Data\n(CSV/JSON/PDF)" as UC19
        usecase "Schedule\nReports" as UC20
        usecase "Create Custom\nVisualizations" as UC21
    }
    
    ' System Configuration Use Cases
    package "System Configuration" {
        usecase "Configure\nSystem Settings" as UC22
        usecase "Manage\nUser Accounts" as UC23
        usecase "Set Up Data\nCollection" as UC24
        usecase "Configure\nStorage" as UC25
    }
    
    ' Data Collection Use Cases
    package "Data Collection" {
        usecase "Collect System\nCall Data" as UC26
        usecase "Import CSV\nFiles" as UC27
        usecase "Process Robot\nStreams" as UC28
        usecase "Validate\nData Quality" as UC29
    }
}

